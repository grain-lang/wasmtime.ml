{
  "name": "@grain/wasmtime.ml",
  "version": "0.0.0",
  "description": "OCaml bindings for Wasmtime.",
  "author": "Oscar Spencer <oscar@grain-lang.org>",
  "license": "Apache-2.0",
  "dependencies": {
    "ocaml": "^4.11.0",
    "@opam/dune": "^2.7.1",
    "@opam/dune-configurator": "^2.7.1"
  },
  "devDependencies": {
    "@opam/ocamlformat": "^0.15.0",
    "@opam/ocaml-lsp-server": "^1.1.0"
  },
  "esy": {
    "build": "dune build -p wasmtime --no-buffer",
    "buildEnv": {
      "DUNE_BUILD_DIR": "#{self.target_dir}"
    }
  },
  "scripts": {
    "test": "esy b dune runtest",
    "format": "dune build @fmt --auto-promote"
  },
  "installConfig": {
    "pnp": false
  },
  "keywords": [
    "wasmtime",
    "ocaml"
  ]
}
